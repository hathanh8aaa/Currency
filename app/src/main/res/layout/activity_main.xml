<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_main"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#AAAAAA">

    <TextView
        android:id="@+id/text_high"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="0.0"
        android:textSize="25dp"
        android:gravity="left|center_vertical"
        android:background="#AAAAAA"
        android:textColor="#000000"
        />


    <Spinner
        android:id="@+id/spinner_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_low"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="0.0"
        android:textSize="25dp"
        android:gravity="left|center_vertical"
        android:background="#AAAAAA"
        android:textColor="#000000"/>

    <Spinner
        android:id="@+id/spinner_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 USD = 23,471 VND"
        android:textSize="20dp"
        android:gravity="left|center_vertical"
        android:textColor="#000000"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.2"
        android:background="#AAAAAA">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="40sp"
            android:id="@+id/nothing"
            android:background="#AAAAAA"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="25sp"
            android:id="@+id/CE"
            android:background="@drawable/gray_button"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="BS"
            android:textSize="25sp"
            android:id="@+id/BS"
            android:background="@drawable/gray_button"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.2">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30sp"
            android:id="@+id/digit_7"
            android:background="@drawable/white_button"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="30sp"
            android:id="@+id/digit_8"
            android:background="@drawable/white_button"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="30sp"
            android:id="@+id/digit_9"
            android:background="@drawable/white_button"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.2">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30sp"
            android:id="@+id/digit_4"
            android:background="@drawable/white_button"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30sp"
            android:id="@+id/digit_5"
            android:background="@drawable/white_button"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30sp"
            android:id="@+id/digit_6"
            android:background="@drawable/white_button"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.2">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30sp"
            android:id="@+id/digit_1"
            android:background="@drawable/white_button"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30sp"
            android:id="@+id/digit_2"
            android:background="@drawable/white_button"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"

            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30sp"
            android:id="@+id/digit_3"
            android:background="@drawable/white_button"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.2">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#AAAAAA"
            android:textSize="30sp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30sp"
            android:id="@+id/digit_0"
            android:background="@drawable/white_button"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="30sp"
            android:id="@+id/dot"
            android:background="@drawable/white_button"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"/>


    </LinearLayout>
</LinearLayout>